<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:weightSum="1">

    <Button
        android:text="UWB                                                                         创建"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:id="@+id/bt_theme"
        android:background="@drawable/theme"
        android:layout_weight="0.10"
        android:textColor="@color/common_google_signin_btn_text_dark_default"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:id="@+id/textView35"
        android:layout_weight="0.03"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:id="@+id/background"
        android:background="@drawable/background"
        android:gravity="center"
        android:layout_weight="0.33"/>

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/textView10"
        android:layout_weight="0.00"
        android:layout_height="20dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="65dp">

        <TextView
            android:layout_height="65dp"
            android:id="@+id/textView5"
            android:layout_width="40dp"/>

        <ImageButton
            android:id="@+id/bt_connect"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@drawable/connect"
            android:layout_height="65dp"
            android:layout_width="65dp"/>

        <TextView
            android:layout_height="match_parent"
            android:id="@+id/textView12"
            android:layout_width="43dp"/>

        <ImageButton
            android:id="@+id/bt_data"
            android:onClick="bt_device_state"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_weight="0.00"
            android:background="@drawable/data"
            android:layout_width="65dp"
            android:layout_height="65dp"/>

        <TextView
            android:layout_height="match_parent"
            android:id="@+id/textView13"
            android:layout_width="43dp"/>

        <ImageButton
            android:id="@+id/bt_device_state"
            android:onClick="bt_data"
            android:layout_row="0"
            android:layout_column="3"
            android:background="@drawable/device"
            android:layout_height="65dp"
            android:layout_width="65dp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_weight="0.10">

        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:id="@+id/textView4"
            android:layout_weight="0.00"/>

        <TextView
            android:text="连接"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:layout_weight="0.00"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:id="@+id/textView24"
            />

        <TextView
            android:text="数据"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView26"
            android:layout_weight="0.00"/>

        <TextView
            android:layout_width="67dp"
            android:layout_height="match_parent"
            android:id="@+id/textView27"
            />

        <TextView
            android:text="设备状态"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView28"
            android:layout_weight="0.00"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:id="@+id/textView9"
        android:layout_weight="0.10"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="65dp">

        <TextView
            android:layout_height="65dp"
            android:id="@+id/textView6"
            android:layout_width="40dp"/>

        <ImageButton
            android:id="@+id/bt_picture"
            android:layout_row="1"
            android:layout_column="3"
            android:background="@drawable/picture"
            android:layout_width="65dp"
            android:layout_height="65dp"/>

        <TextView
            android:layout_height="match_parent"
            android:id="@+id/textView14"
            android:layout_width="43dp"/>

        <ImageButton
            android:id="@+id/bt_position"
            android:onClick="bt_position"
            android:layout_row="1"
            android:layout_column="2"
            android:background="@drawable/position"
            android:layout_width="65dp"
            android:layout_height="65dp"/>

        <TextView
            android:layout_height="match_parent"
            android:id="@+id/textView15"
            android:layout_width="43dp"/>

        <ImageButton
            android:id="@+id/bt_disconnect"
            android:onClick="bt_Disconnect"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@drawable/disconnect"
            android:layout_width="65dp"
            android:layout_height="65dp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_weight="0.1">

        <TextView
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:id="@+id/textView20"
            />

        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:id="@+id/textView16"
            android:text="图像生成"/>

        <TextView
            android:layout_width="47dp"
            android:layout_height="match_parent"
            android:id="@+id/textView30"
            />

        <TextView
            android:text="模拟定位"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView31"
            />

        <TextView
            android:layout_width="53dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView33"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView34"
            android:layout_weight="1"
            android:text="断开连接"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/textView21"
        android:layout_weight="0.10"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="0.00"
        android:layout_height="65dp">

        <TextView
            android:layout_height="match_parent"
            android:id="@+id/textView11"
            android:layout_width="40dp"/>

        <ImageButton
            android:id="@+id/bt_exit"
            android:layout_row="2"
            android:layout_column="1"
            android:background="@drawable/exit"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:onClick="bt_Exit"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_weight="0.10">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView22"
            />

        <TextView
            android:text="退出"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView23"
            />
    </LinearLayout>

</LinearLayout>
