<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
            android:text="返回"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/pictureback"
            android:layout_weight="1"
            android:background="#ff000000"
            android:textColor="#ffffffff"
            android:onClick="bt_databack"
            android:gravity="center|left"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_alignBottom="@+id/bt_theme"/>

        <Button
            android:id="@+id/uppicture"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/bt_theme"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:layout_weight="1"
            android:background="#ff000000"
            android:gravity="center|right"
            android:onClick="bt_update"
            android:text="更新"
            android:textColor="#ffffffff"/>

        <TextView
            android:text="图像生成"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/bt_theme"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:background="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:id="@+id/y_text"
            android:layout_alignBaseline="@+id/x_text"
            android:layout_alignBottom="@+id/x_text"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/x_char"
            android:layout_alignBaseline="@+id/x_text"
            android:layout_alignBottom="@+id/x_text"
            android:layout_alignLeft="@+id/button"
            android:layout_alignStart="@+id/button"
            android:gravity="center"/>

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/y_text"
            android:layout_toLeftOf="@+id/y_text"
            android:layout_toStartOf="@+id/y_text"
            android:id="@+id/y_char"
            android:gravity="center"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="21dp"
            android:id="@+id/x_text"
            android:layout_below="@+id/pictureback"
            android:layout_toRightOf="@+id/x_char"
            android:layout_toEndOf="@+id/x_char"/>

        <TextView
            android:id="@+id/axis"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:background="@drawable/layout2"
            android:layout_below="@+id/y_text"
            android:layout_centerHorizontal="true"/>

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/person"
            android:background="@drawable/person"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/x_char"
            android:layout_alignRight="@+id/pictureback"
            android:layout_alignEnd="@+id/pictureback"/>

    </RelativeLayout>
</LinearLayout>
